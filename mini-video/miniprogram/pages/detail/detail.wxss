.teaser_title {
  font-size: 38rpx;
  font-weight: 600;
  color: #fff;
  padding: 30rpx 0;
}

.teaser_list {
  position: relative;
  margin: 20rpx 0;
}

.summary_t {
  position: absolute;
  top: 5%;
  left: 5%;
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}
.t_time{
  position: absolute;
  right: 3%;
  bottom: 8%;  
  font-size: 30rpx;
  font-weight: 500;
  color: #fff;
}